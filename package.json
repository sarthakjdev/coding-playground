{
  "name": "coding-playground",
  "version": "1.0.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "install": "npm run install:server && npm run install:client",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "dev:db": "cd server && npm run dev:db",
    "dev": "npm run dev:server && npm run dev:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "lint:server": "cd servr && npm run lint",
    "lint:client": "cd client && npm run lint",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:fix": "cd server && npm run lint:fix",
    "start:server": "cd server && npm run start",
    "start:client": "cd client && npm run start",
    "start": "npm run start:client && npm run start:server",
    "db-migrate": "cd server && npx prisma generate && npx prisma migrate dev",
    "db-generate": "cd server && npx prisma generate"
  },
